<!DOCTYPE html>
<html>
<head>
  <title>Message2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user.present? %>
<%= link_to 'New Message', root_path %>
<%= link_to 'Messages', messages_path %>
<% if current_user.role == "admin" %>
  <%= link_to 'Users', users_path %>
<% end %>
<%= link_to ("[%s] %s" % [current_user.role, current_user.email]), edit_user_registration_path %>
<%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% else %>
<%= link_to 'Sign In', new_user_session_path %>
<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
