<!DOCTYPE html>
<html>
<head>
  <title>Message2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
  <div id="menu">
    <% if current_user.present? %>
      <%= link_to 'New Message', root_path, class: "#{current?(root_path)}" %>
      <%= link_to 'Messages', messages_path, class: "#{current?(messages_path)}" %>
      <% if current_user.role == "admin" %>
        <%= link_to 'Users', users_path, class: "#{current?(users_path)}" %>
      <% end %>
      <%= link_to ("[%s] %s <%s>" % [current_user.role, current_user.username, current_user.email]),
        edit_user_registration_path, class: "#{current?(edit_user_registration_path)}" %>
      <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "link" %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: "link" %>
    <% end %>
  </div>
  <div id="main">
    <% if notice %><div id="notice"><%= notice %></div><% end %>
    <% if alert %><div id="alert"><%= alert %></div><% end %>
    <%= yield %>
  </div>
</div>

</body>
</html>
